%% -*- mode:erlang -*-
{eunit_opts,           [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.
{erl_opts,             [debug_info, warnings_as_errors]}.
{deps_dir,             "lib"}.
{lib_dirs,             ["lib"]}.
{cover_enabled,        true}.
{cover_print_enabled,  true}.
{cover_min_coverage,   80}.
{xref_checks,          [ undefined_function_calls
                       , deprecated_function_calls]}.
{deps,
 [ {mochijson3, ".*", {git, "gitosis@git.internal.machines:mochijson3.git",
                       {branch, "master"}}}
 , {jsonx, ".*", {git, "ssh://git@stash.internal.machines:7999/syn/jsonx.git",
                  {branch, "master"}}}
 ]}.
